# ─── Magento 2 Connection ─────────────────────────────────────────────
# Base URL of your Magento 2 / Adobe Commerce instance
M2_BASE_URL=https://your-store.example.com

# Authentication method: "token" (recommended) or "oauth"
M2_AUTH_METHOD=token

# Integration access token (for token auth)
# Create this in Magento Admin > System > Integrations
M2_ACCESS_TOKEN=your_integration_access_token

# OAuth 1.0a credentials (for oauth auth)
# M2_OAUTH_CONSUMER_KEY=
# M2_OAUTH_CONSUMER_SECRET=
# M2_OAUTH_ACCESS_TOKEN=
# M2_OAUTH_ACCESS_TOKEN_SECRET=

# ─── Store Configuration ──────────────────────────────────────────────
# Store view code for multi-store setups (default: "default")
M2_STORE_VIEW=default

# Default store currency (used for product pricing)
M2_STORE_CURRENCY=USD

# REST API version prefix
M2_API_VERSION=V1

# Request timeout in milliseconds
M2_TIMEOUT=30000

# ─── onX Configuration ───────────────────────────────────────────────
# Vendor namespace for extension fields (default: "m2")
# Extension fields will be prefixed as "m2:field_name"
ONX_VENDOR_NAMESPACE=m2
